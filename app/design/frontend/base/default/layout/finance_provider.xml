<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <block type="core/text" name="divido.base">
                <action method="setText">
                    <text helper="finance_provider_pay/getScriptTags" />
                </action>
            </block>
            <action method="addCss"><stylesheet>css/FinanceProvider/finance_provider.css</stylesheet></action>
        </reference> 
    </default>
    <catalog_product_view translate="label">
        <reference name="content">
            <reference name="product.info">
                <block type="pay/widget" name="finance_provider" template="pay/widget.phtml" after="product.info"></block>
            </reference>
            <reference name="product.info.extrahint">
                <block type="pay/widget" name="finance_provider_auto" template="pay/widget.phtml"></block>
            </reference>
        </reference>
    </catalog_product_view>
</layout>
